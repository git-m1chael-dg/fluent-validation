{
  "name": "fluent-validation",
  "version": "1.0.0",
  "description": "a simple fluent validation framework using ES6",
  "main": "src/index.js",
  "repository": "https://github.com/git-m1chael-dg/fluent-validation.git",
  "author": "Michael de Guzman <mdeguzman.vss@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=3.10.8"
  },
  "engineStrict": true,
  "scripts": {
    "clean_build": "rimraf coverage bin/src tmp bin/*.js {src,__tests__}/**/*.{js,map}",
    "build": "tsc -p tsconfig.release.json",
    "build_dev": "tsc -p tsconfig.json",
    "rebuild": "yarn clean_build && yarn build",
    "rebuild_dev": "yarn clean_build && yarn build_dev",
    "watch": "tsc -w -p tsconfig.release.json",
    "pretest": "yarn lint",
    "test": "yarn test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tslint -t stylish '{src,__tests__,scripts}/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/jest": "20.0.2",
    "@types/node": "8.0.11",
    "jest": "20.0.4",
    "rimraf": "2.6.1",
    "ts-jest": "20.0.7",
    "ts-node": "3.2.0",
    "tslib": "1.7.1",
    "tslint": "5.5.0",
    "tslint-microsoft-contrib": "5.0.1",
    "typescript": "2.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "<rootDir>(__tests__/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts"
    ]
  }
}
